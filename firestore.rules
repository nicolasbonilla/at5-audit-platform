rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Por defecto, denegar todo
    match /{document=**} {
      allow read, write: if false;
    }

    // Usuarios - solo admins pueden crear/eliminar, usuarios pueden leer su propio perfil
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN');
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // Organizaciones
    match /organizations/{orgId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // Sesiones de auditoría
    match /auditSessions/{sessionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'LEAD_AUDITOR', 'AUDITOR'];
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'LEAD_AUDITOR', 'AUDITOR'];
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'LEAD_AUDITOR'];
    }

    // Planes de prueba
    match /testPlans/{planId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'LEAD_AUDITOR', 'AUDITOR'];
    }

    // Ejecuciones de pruebas
    match /testExecutions/{execId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'LEAD_AUDITOR', 'AUDITOR'];
    }

    // Evidencias
    match /evidence/{evidenceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'LEAD_AUDITOR', 'AUDITOR'];
    }

    // Firmas
    match /signatures/{signatureId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; // Las firmas son inmutables
    }

    // Reportes
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'LEAD_AUDITOR'];
    }

    // Logs de auditoría - solo lectura, escritura solo desde backend
    match /auditLogs/{logId} {
      allow read: if request.auth != null;
      allow write: if false; // Solo el backend puede escribir
    }
  }
}
